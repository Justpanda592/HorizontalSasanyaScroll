<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="750dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_view_message"
        android:layout_width="379dp"
        android:layout_height="53dp"
        android:text=""
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906"
        tools:layout_editor_absoluteX="4dp"></TextView>

    <ImageView
        android:id="@+id/image"
        android:layout_width="361dp"
        android:layout_height="261dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/text_view_cost"
        tools:layout_editor_absoluteX="7dp"></ImageView>

    <TextView
        android:id="@+id/text_view_cost"
        android:layout_width="407dp"
        android:layout_height="41dp"
        android:text="Цена: "
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toTopOf="@+id/text_view_ml"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.984"
        tools:layout_editor_absoluteX="6dp"></TextView>

    <TextView
        android:id="@+id/text_view_ml"
        android:layout_width="375dp"
        android:layout_height="41dp"
        android:text=""
        android:textColor="#aaaaaa"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/text_view_desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        tools:layout_editor_absoluteX="8dp"></TextView>

    <TextView
        android:id="@+id/text_view_desc"
        android:layout_width="377dp"
        android:layout_height="128dp"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936"
        tools:layout_editor_absoluteX="6dp"></TextView>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="650dp"
        android:layout_marginRight="0dp"
        android:text="Купить"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>